const express = require('express');
const app = express();
const port = 3001;
app.use(express.json());
const opciones = ['Opción 1', 'Opción 2', 'Opción 3'];
app.get('/opciones', (req, res) => {
res.json(opciones);
});
app.listen(port, () => {
    console.log("Servidor corriendo en http://localhost:${port}");
});